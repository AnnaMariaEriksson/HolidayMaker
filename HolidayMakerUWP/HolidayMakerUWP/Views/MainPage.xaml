<Page
    x:Class="HolidayMakerUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HolidayMakerUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <Button
                Name="NavigateToHotelSearchButton"
                Width="521"
                Height="90"
                Click="NavigateToHotelSearchButton_OnClick"
                Content="Hotel search"
                FontSize="60" />

            <Button
                Name="NavigateToFrontPageSearch"
                Width="521"
                Height="125"
                Click="NavigateToFrontPageSearch_OnClick"
                Content="Front Page search!"
                FontSize="60" />
            <Button Content="My Booking page"
                    FontSize="60"
                    x:Name="MyBookingPage"
                    Click="MyBookingPage_Click"/>
            <Button x:Name="RegistrationPage"
                    Content="Registration page" 
                    Height="87" 
                    Width="487"
                    FontSize="55"
                    Click="RegistrationPage_OnClick"/>
        </StackPanel>
        
    </Grid>
</Page>
