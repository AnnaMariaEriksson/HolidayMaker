<Page
    x:Class="HolidayMakerUWP.Views.RoomSelection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HolidayMakerUWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:model="using:HolidayMakerUWP.Model"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
<!--Main Grid-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition  Height="6*" />
        </Grid.RowDefinitions>
        <!--Grid TWO-->
        <Button  Grid.Column="2"
                 Grid.Row="0"
                 Background="White"
                 HorizontalAlignment="Stretch"
                 >
            <Image Source="../Images/ProfileIcon.png" />
            <Button.Flyout>
                <Flyout Placement="TopEdgeAlignedRight" x:Name="MenuFlyout"
                        Opening="MenuFlyout_Opening">
                    <StackPanel Width="170" Height="140">
                        <TextBlock Text="Meny" TextAlignment="Center" FontWeight="Bold" FontSize="18"/>
                        <Button Content="Logga in" Width="150" HorizontalAlignment="Center" x:Name="LogInButton"
                                Click="LogInButton_Click" />
                        <Button Content="Registrera dig" Width="150"  HorizontalAlignment="Center" x:Name="RegisterButton" Margin="0,5,0,0"
                                Click="RegisterButton_Click" />
                        <Button Content="Mina bokningar" Width="150" Visibility="Collapsed" HorizontalAlignment="Center" Margin="0,5,0,0" x:Name="MyBookingsButton"/>
                        <Button Content="Logga ut" Width="150" Visibility="Collapsed" HorizontalAlignment="Center" Margin="0,5,0,0" x:Name="LogoutButton"/>
                    </StackPanel>
                </Flyout>
            </Button.Flyout>
        </Button>

        <Grid Grid.Column="1" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{x:Bind Vm.SelectedHotel.Name}" HorizontalAlignment="Center" FontSize="100" FontWeight="Bold" Grid.Row="0"/>
            <!--Grid THREE-->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!--Grid FOUR bottom right-->
                <Grid Grid.Row="0" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Beskrivning om hotellet" HorizontalAlignment="Left" FontSize="50" FontWeight="Bold" Grid.Row="0"/>
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Fasciliteter:" HorizontalAlignment="Left" FontSize="50" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text=" blablablal" HorizontalAlignment="Left" FontSize="30" FontWeight="Bold"/>
                            <TextBlock Text=" bla bla" HorizontalAlignment="Left" FontSize="30" FontWeight="Bold"/>
                            <TextBlock Text=" bla bla" HorizontalAlignment="Left" FontSize="30" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Hej" HorizontalAlignment="Left" FontSize="30" FontWeight="Bold"/>
                            <TextBlock Text=" Hej" HorizontalAlignment="Left" FontSize="30" FontWeight="Bold"/>
                            <TextBlock Text=" Hej" HorizontalAlignment="Left" FontSize="30" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Hej" HorizontalAlignment="Left" FontSize="30" FontWeight="Bold"/>
                            <TextBlock Text=" Hej" HorizontalAlignment="Left" FontSize="30" FontWeight="Bold"/>
                            <TextBlock Text=" Hej" HorizontalAlignment="Left" FontSize="30" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
                
                <Button Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Välj" Width="350" Height="70" FontSize="40" CornerRadius="25"/>
                <ListView Grid.Column="0" Grid.RowSpan="2" ItemsSource="{x:Bind Vm.Rooms}" IsMultiSelectCheckBoxEnabled="False" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="model:Room">
                            <Grid>
                                <StackPanel>
                                <TextBlock Text="{x:Bind Price}"/>
                                <TextBlock Text="{x:Bind RoomName}"/>
                                <Button Content="Allinclusive 900kr" IsEnabled="{x:Bind HasAllInclusive}"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="1*"/>
            <ColumnDefinition  Width="8*"/>
            <ColumnDefinition  Width="1*"/>
        </Grid.ColumnDefinitions>
    </Grid>
</Page>
