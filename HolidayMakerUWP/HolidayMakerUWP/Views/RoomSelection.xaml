<Page
    x:Class="HolidayMakerUWP.Views.RoomSelection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HolidayMakerUWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:model="using:HolidayMakerUWP.Model"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
<!--Main Grid-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition  Height="6*" />
        </Grid.RowDefinitions>
        <!--Grid TWO-->
        <Button  Grid.Column="2" Grid.Row="0" Background="White" HorizontalAlignment="Stretch">
            <Image Source="../Images/ProfileIcon.png"/>
        </Button>
        <Grid Grid.Column="1" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
            </Grid.ColumnDefinitions>
            <TextBlock Text="HOTELL 1 BILD" HorizontalAlignment="Center" FontSize="100" FontWeight="Bold" Grid.Row="0"/>
            <!--Grid THREE-->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!--Grid FOUR bottom right-->
                <Grid Grid.Row="0" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <ListView ItemsSource="{x:Bind tempHotels}" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="model:Hotel">
                                <TextBlock Text="{x:Bind HotelDescription}" TextWrapping="Wrap"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <ListView Grid.Row="1" ItemsSource="{x:Bind tempHotels}" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="model:Hotel">
                                <StackPanel>
                                    <TextBlock Text="Fasciliteter:" HorizontalAlignment="Left" FontSize="50" FontWeight="Bold"/>
                                        <StackPanel>
                                            <TextBlock Text="Avstånd till havet: " HorizontalAlignment="Left"/>
                                            <TextBlock Text="Avstånd till centrum: " HorizontalAlignment="Left"/>
                                            <CheckBox IsChecked="{x:Bind HasAllInclusive}" Content="Has all inclusive" IsHitTestVisible="False"/>
                                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{x:Bind HasChildrensClub}" HorizontalAlignment="Left" FontSize="30" FontWeight="Bold"/>
                            <TextBlock Text="{x:Bind HasEntertainment}" HorizontalAlignment="Left" FontSize="30" FontWeight="Bold"/>
                            <TextBlock Text=" Hej" HorizontalAlignment="Left" FontSize="30" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Hej" HorizontalAlignment="Left" FontSize="30" FontWeight="Bold"/>
                            <TextBlock Text=" Hej" HorizontalAlignment="Left" FontSize="30" FontWeight="Bold"/>
                            <TextBlock Text=" Hej" HorizontalAlignment="Left" FontSize="30" FontWeight="Bold"/>
                        </StackPanel>
                        </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
                
                <Button Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Välj" Width="350" Height="70" FontSize="40" CornerRadius="25"/>
                <ListView Grid.Column="0" Grid.RowSpan="2" ItemsSource="{x:Bind Vm.Rooms}" IsMultiSelectCheckBoxEnabled="False" SelectionMode="None" BorderBrush="Black" BorderThickness="5" Margin="0,0,90,0" >
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="model:Room">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="{x:Bind Price}"/>
                                    <TextBlock Text="{x:Bind RoomName}"/>
                                    <Button Content="Allinclusive 900kr" IsEnabled="{x:Bind HasAllInclusive}" Margin="0,0,65,0"/>
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="1">
                                    <TextBlock Text=""/>
                                    <TextBlock Text=""/>
                                    <Button Content="Välj" Margin="150,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="1*"/>
            <ColumnDefinition  Width="8*"/>
            <ColumnDefinition  Width="1*"/>
        </Grid.ColumnDefinitions>
    </Grid>
</Page>
